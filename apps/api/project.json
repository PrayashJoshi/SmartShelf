{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "source dbms_api/bin/activate ; flask --app src/main run"
      }
    },
    "setup-venv": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "python3 -m venv dbms_api"
      }
    },
    "freeze-requirements": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/api",
        "command": "source dbms_api/bin/activate ; pip freeze > requirements.txt"
      }
    }
  }
}